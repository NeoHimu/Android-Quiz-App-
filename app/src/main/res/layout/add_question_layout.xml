<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/question_background"
    >

    <EditText
        android:id="@+id/etNewQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="Write question here.."
        android:textSize="40sp"
        android:layout_margin="5dp"
        android:background="@drawable/back"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editexes_questions"
        android:layout_below="@id/etNewQuestion"
        android:weightSum="5"
        android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etChoice1"
        android:layout_weight="1"
        android:hint="Choice 1"
        android:textSize="40sp"/>
            <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etChoice2"
                android:layout_weight="1"
                android:hint="Choice 2"
                android:textSize="40sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etChoice3"
            android:layout_weight="1"
            android:hint="Choice 3"
            android:textSize="40sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etChoice4"
            android:layout_weight="1"
            android:hint="Choice 4"
            android:textSize="40sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etCorrectChoice"
            android:layout_weight="1"
            android:hint="Correct choice!"
            android:textSize="40sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_below="@+id/editexes_questions">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addNewQuesBack"
        android:text="Back!"
        android:textSize="30dp"
        android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addNewQues"
            android:text="Add!"
            android:textSize="30dp"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>